generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================================
// AUTHENTIFICATION ET UTILISATEURS
// ==================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String? // 1. Rendre le mot de passe optionnel
  emailVerified DateTime? // Recommandé par NextAuth
  image         String? // Pour la photo de profil de Google/Apple
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  orders   Order[]
  accounts Account[] // 2. Relation avec le modèle Account
  sessions Session[] // 3. Relation avec le modèle Session
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}

// --- MODÈLES REQUIS PAR NEXTAUTH PRISMA ADAPTER ---

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================================
// PRODUITS ET COMMANDES
// ==================================

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  stock       Int      @default(0)
  images      String[] // Liste d'URLs d'images
  category    String
  rating      Int      @default(0) // Note moyenne, de 0 à 5
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  orderItems OrderItem[] // Un produit peut être dans plusieurs lignes de commande
}

model Order {
  id            String        @id @default(cuid())
  total         Float
  status        OrderStatus   @default(PENDING)
  paymentMethod PaymentMethod
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  userId     String
  user       User        @relation(fields: [userId], references: [id])
  orderItems OrderItem[] // Une commande est composée de plusieurs produits
  Payment    Payment? // Une commande peut avoir un paiement associé
}

// Table de liaison pour la relation Many-to-Many entre Order et Product
model OrderItem {
  id       String @id @default(cuid())
  quantity Int
  price    Float // Prix du produit au moment de la commande

  // Relations
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
}

enum OrderStatus {
  PENDING // En attente de paiement
  PAID // Payée
  SHIPPED // Expédiée
  DELIVERED // Livrée
  CANCELLED // Annulée
}

enum PaymentMethod {
  AIRTEL_MONEY
  PHYSICAL
  WHATSAPP
}

// ==================================
// PAIEMENTS
// ==================================

model Payment {
  id            String   @id @default(cuid())
  amount        Float
  status        String // ex: "success", "failed", "pending"
  method        String // ex: "Airtel Money"
  transactionId String?  @unique // ID de transaction de l'API externe
  createdAt     DateTime @default(now())

  // Relations
  orderId String @unique // Relation One-to-One avec Order
  order   Order  @relation(fields: [orderId], references: [id])
}

// ==================================
// CONTENU PUBLIC DU SITE
// ==================================

model PublicInfo {
  id      String @id @default(cuid())
  section String @unique // ex: "hero-title", "about-text"
  content Json // Utiliser JSON pour une flexibilité maximale (texte, images, etc.)
}

// ==================================
// STATISTIQUES DU SITE
// ==================================

model Stat {
  id     String @id @default(cuid())
  icon   String // Nom de l'icône Lucide (ex: "Smile", "FolderKanban")
  label  String // ex: "Clients Satisfaits"
  target Int // Le chiffre à afficher
  order  Int    @default(0) // Pour contrôler l'ordre d'affichage
}

// ==================================
// PROJETS DE L'ENTREPRISE
// ==================================

model Project {
  id            String   @id @default(cuid())
  title         String
  category      String
  mainImage     String // URL de l'image principale
  galleryImages String[] // Liste d'URLs pour la galerie
  client        String
  projectDate   DateTime // Utiliser DateTime pour un tri et un filtrage plus faciles
  projectUrl    String? // Optionnel
  description   String   @db.Text // Pour les descriptions longues

  // Champs pour le témoignage (tous optionnels)
  testimonialQuote  String?
  testimonialAuthor String?
  testimonialRole   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==================================
// DEMANDES DE DEVIS
// ==================================

model Quote {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  message   String   @db.Text
  isRead    Boolean  @default(false) // Pour marquer si la demande a été lue
  createdAt DateTime @default(now())
}
